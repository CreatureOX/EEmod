package com.github.CreatureOX.eemod.world.gen;

import java.util.Random;

import com.github.CreatureOX.eemod.block.ModBlocks;

import net.minecraft.init.Blocks;
import net.minecraft.world.World;
import net.minecraft.world.gen.feature.WorldGenMinable;
import net.minecraft.world.gen.feature.WorldGenerator;

public class ModWorldGeneratorPurple extends WorldGenerator{
    
	private final WorldGenerator purpleGenerator = new WorldGenMinable(ModBlocks.magicBlock, 16);
	@Override
    public boolean generate(World world, Random rand,int x,int y,int z)
    {
        if (TerrainGen.generateOre(world, rand, this, pos, OreGenEvent.GenerateMinable.EventType.CUSTOM))
        {
            for (int i = 0; i < 4; ++i)
            {
                int posX = pos.getX() + rand.nextInt(16);
                int posY = 16 + rand.nextInt(16);
                int posZ = pos.getZ() + rand.nextInt(16);
                BlockPos blockpos = new BlockPos(posX, posY, posZ);
                BiomeGenBase biomeGenBase = world.getBiomeGenForCoords(blockpos);
                if (biomeGenBase.getIntRainfall() < rand.nextInt(65536))
                {
                    glowstoneGenerator.generate(world, rand, blockpos);
                }
            }
        }
        return true;
    }
	

}
